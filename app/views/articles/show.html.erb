<section class="layout-article-show">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 Article">
                <h1><%= @article.title %></h1>
                <div class="Article__subtitle"><%= (@article.updated_at).strftime("%Y/%m/%d") %><span class="Article__subtitle--cat"><%= @article.category %></span></div>
                <div class="Article__contents">
                    <%= sanitize(simple_format(@article.article), :tags => %w( h2 h3 br a img style)) %>
                    <% if admin_signed_in? %>
                    <div class="Article__controller">
                        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary" %>
                    </div>
                    <% end %>
                </div>
            </div>
            <div class="col-sm-4 Article--side">
                <div class="Article--side__contents">
                    <h2>関連記事</h2>
                    <ul>
                        <% @article_1_2.shuffle.first(15).each do |a| %>
                        <li class="Article--side__list">
                            <p><%= link_to a.title, a %></p>
                        </li>
                        <% end %>
                    </ul>
                </div>
                <div class="Article--side__contents">
                    <h2>お得な情報</h2>
                    <ul>
                        <% @article_3.shuffle.each do |a| %>
                        <li class="Article--side__list">
                            <p><%= link_to a.title, a %></p>
                        </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
