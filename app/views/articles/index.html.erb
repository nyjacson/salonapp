<% provide(:title, "脱毛関連記事管理") %>
<section class="layout-static-admin">
    <div class="container">
        <h1>脱毛関連記事管理画面</h1>
        <% @article.each do |a| %>
        <div class="row">
            <div class="col-sm-10">
                <p>記事タイトル：<%= link_to a.title, a %> <br>カテゴリー：<%= a.category %><br>最終更新：<%= a.updated_at %></p>
            </div>
            <div class="col-sm-2">
            <div class="btn btn-default btn-sm"><%= link_to "編集", "#" %></div><div class="btn btn-default btn-sm"><%= link_to "削除", "#" %></div>
            </div>
        </div>
        <% end %>
    </div>
</section>
