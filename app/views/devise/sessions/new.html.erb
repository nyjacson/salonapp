<div class="AdminPage">
<div class="AdminPage__contents">

<h2 class="AdminPage__title">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field AdminPage__field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, class: "AdminPage__input form-control" %>
  </div>

  <div class="field AdminPage__field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "off", class: "AdminPage__input form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field AdminPage__field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions AdminPage__actions">
    <%= f.submit "ログイン", class: "form-control btn btn-default" %>
  </div>
<% end %>
<div class="AdminPage__otherlinks">
  <%= render "devise/shared/links" %>
</div>
</div>
</div>