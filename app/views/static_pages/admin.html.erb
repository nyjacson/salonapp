<% provide(:title, "Admin") %>
<div class="layout-static-admin">

    <% if admin_signed_in? %>
    <div class="Credential">
        <p>こんにちは <%= current_admin.email %> さん</p>
        <p><%= link_to "ユーザー管理", edit_admin_registration_path, :class => "navbar-link" %> | <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, :class => "navbar-link" %></p>  
    </div>
    <section class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>管理画面</h1>
                <p><%= link_to 'サロン管理',shopinfos_path  %></p>
                <p><%= link_to '記事管理',articles_path  %></p>
                <p><%= link_to 'カスタマーレビュー管理',shopfbs_path  %></p>
            </div>
        </div>
    </section>


    <% else %>
    <div class="Credential--loggedoff">
        <%= link_to "ログイン", new_admin_session_path, :class => 'navbar-link' %>
    </div>
    <% end %>
</div>
