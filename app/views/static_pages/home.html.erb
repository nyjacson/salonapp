<% provide(:title, "Top") %>
<div class="layout-top-image"></div>
<div class="container-fluid layout-top-mainWrapper">
    <section>
        <h1>全国の脱毛サロンを検索する</h1>
        <div class="row">
            <div class="col-sm-4">
                <div class="layout-contentslistWrapper">
                    <div class="layout-titleArea">
                        <h2 class="line">初めての脱毛まずはここから</h2>
                    </div>
                    <ul>
                        <% @article_1.shuffle.first(8).each do |a| %>
                        <li class="check"><%= link_to a.title, a %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="layout-titleArea">
                    <h2 class="line">地図から探す</h2>
                </div>
                <div class="layout-mapWrapper">
                </div>
                <%= render 'static_pages/kantocityname' %>
            </div>
            <div class="col-sm-4">
                <div class="layout-searchtypeWrapper">
                    <div class="layout-titleArea">
                        <h2 class="line">こだわりの条件から探す</h2>
                    </div>
                    <ul>
                        <li class="ToBottom__menu">
                            <%= link_to '有名・老舗店から探す', static_pages_toku2_path %>
                        </li>
                        <li class="ToBottom__menu">
                            <%= link_to '話題のサロンから探す', static_pages_toku1_path %>
                        </li>
                    </ul>
                </div>
                <!-- .layout-searchTypeWrapper -->
                <div class="PrArea">
                    <div class="layout-titleArea">
                        <h2 class="line">新着プロモーション</h2>
                    </div>
                    <div class="PrArea__contents">
                        <a href="https://track.affiliate-b.com/visit.php?guid=ON&a=44395S-E172085R&p=U445860X" target="_blank" rel="nofollow"><img src="https://www.affiliate-b.com/upload_image/4395-1354658502-3.gif" width="320" height="100" style="border:none;" alt="※キャンペーン" /></a><img src="https://track.affiliate-b.com/lead/44395S/U445860X/E172085R" width="1" height="1" style="border:none;" />
                    </div>
                </div>
                <!-- .PrArea -->
            </div>

        </div>
        <!-- .row -->
    </section>
    <div class="second-contentsWrapper">
        <div class="row">
            <div class="col-sm-12">
                <section>
                    <h2 class="line">脱毛あれこれ特集</h2>
                        <ul class="ItemArticle">
                            <% @article_2.shuffle.each do |a| %>
                            <div class="ItemArticle__flex">
                                <li class="ItemArticle__flex--item1"><span style="background-image:url(<%= asset_path a.picthum%>);" class="ItemArticle__pic"></span></li>
                                <li class="ItemArticle__flex--item2">
                                    <div class="ItemArticle__title"><%= link_to a.title, a %></div>
                                    <p class="ItemArticle__contents"><%= strip_tags(a.article) %></p>
                                </li>
                            </div>
                            <% end %>
                        </ul>
                </section>
            </div>
        </div>
        <!-- row -->
    </div>
    <!-- .second-contentsWrapper -->
    <div class="third-contentsWrapper">

        <%= render 'layouts/salons' %>

    </div>
    <!-- .third-contentsWrapper -->
</div>
<!-- .container-fluid -->
