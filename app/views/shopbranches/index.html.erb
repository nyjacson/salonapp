<% provide(:title, "支店管理") %>
<div class="layout-static-admin">
<div class="container">
    <section>
        <h1>支店情報管理</h1>
        <% @shopinfo.shopbranches.each do |branch| %>
        <div class="row layout-branchWrapper">
            <div class="col-sm-2"><p><%= branch.shopname %></p></div>
            <div class="col-sm-2"><p><%= branch.branchname %></p></div>
            <div class="col-sm-5"><p><%= truncate(branch.address, length: 25) %></p></div>
            <div class="col-sm-3">
            <%= link_to "Edit", edit_shopinfo_shopbranch_path(@shopinfo, branch),class: "btn btn-default btn-sm" %>
            <%= link_to "Delete",shopinfo_shopbranch_path(@shopinfo, branch), method: :delete, data: {confirm: "削除しますか？"},class: "btn btn-default btn-sm" %>
            </div>
        </div>
        <!-- .row -->
        <% end %>
        <%= link_to "追加", new_shopinfo_shopbranch_path, class: "btn btn-primary" %>
        <%= link_to '戻る', static_pages_admin_path ,class: "btn btn-warning"%>
    </section>
    <!-- # import/export excel/csv ## -->
    <div class="CSV">
        <div class="c-table CSV__import">
            <%= form_tag(import_shopinfo_shopbranches_path, :method => :post, multipart: true) do %>
                <div class="CSV__import--select">
                        <%= file_field_tag :csv_file %>
                </div>
                <div class="btn btn-default btn-sm">
                        <%= submit_tag "CSVインポート", class: "" %>
                </div>     
            <% end %>
        </div>
        <div class="c-table CSV__export">
            <p class="c-table-cell"><%= link_to "CSV Download", download_shopinfo_shopbranches_path(format: "csv"),class: "btn btn-default btn-sm" %></p>
        </div>
    </div>
    <!-- CSV -->
    <!-- # import/export excel/csv End ## -->

</div>
</div>
