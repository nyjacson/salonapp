<% provide(:title, "支店管理") %>
<div class="layout-static-admin">
<div class="container">
    <section>
        <h1>支店情報管理</h1>
        <% @shopbranch.each do |branch| %>
        <div class="row layout-branchWrapper">
            <div class="col-sm-2"><p><%= link_to branch.shopname, branch %></p></div>
            <div class="col-sm-2"><p><%= branch.branchname %></p></div>
            <div class="col-sm-5"><p><%= truncate(branch.address, length: 25) %></p></div>
            <div class="col-sm-3">
                <%= link_to "Edit", edit_shopbranch_path(branch),class: "btn btn-default btn-sm" %>
                <%= link_to "Delete",branch, method: :delete, data: {confirm: "削除しますか？"},class: "btn btn-default btn-sm" %>
            </div>
        </div>
        <!-- .row -->
        <% end %>
        <%= link_to "データを追加する", new_shopbranch_path, class: "btn btn-primary" %>
        <%= link_to '戻る', static_pages_admin_path ,class: "btn btn-warning"%>
    </section>
    <!-- # import/export excel/csv ## -->
    <div class="CSV">
        <%= form_tag import_shopbranches_path, multipart: true do %>
        <div class="c-table CSV__import">
            <p class="c-table-cell CSV__label"><%= file_field_tag :file %></p>
            <p class="c-table-cell"><%= submit_tag "Excelでインポート",class: "btn btn-default btn-sm" %></p>
        </div>
        <% end %>
        <div class="c-table CSV__export">
            <p class="c-table-cell CSV__label">CSVでエクスポート</p>
            <p class="c-table-cell"><%= link_to "CSV", shopbranches_path(format: "csv"),class: "btn btn-default btn-sm" %></p>
        </div>
    </div>
    <!-- CSV -->
    <!-- # import/export excel/csv End ## -->

    <%= will_paginate @shopbranch %>
</div>
</div>
